@model FormRegister
@{
    ViewBag.Title = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/form.css" />
}

<h1 class="custom-title mt-4">Register</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Register" class="ps-4" method="post">
    <div class="input-group input-group-lg row">
        <span asp-for="Username" class="input-group-text col-sm-2">Username</span>
        <input asp-for="Username" class="form-control" />
        <div>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group input-group-lg my-4 row">
        <span asp-for="Password" class="input-group-text col-sm-2">Password</span>
        <input asp-for="Password" type="password" class="form-control" />
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group input-group-lg my-4 row">
        <span asp-for="ConfirmPassword" class="input-group-text col-sm-2">Confirm</span>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="d-grid col-6 mt-4">
        <button type="submit" class="btn btn-primary">Register</button>
        <span>Already Have an Account? <a asp-action="Login" asp-controller="Home">Log In</a></span>
    </div>
</form>